* {
    box-sizing: border-box;
  }
  
  .column {
    float: left;
    width: 22%;
    padding: 0 10px;
    margin: 2rem;
  }
  
  .row {margin: 1rem;}
  
  .row:after {
    content: "";
    display: table;
    clear: both;
  }
  
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* this adds the "card" effect */
    padding: 16px;
    text-align: center;
    background-color: #f1f1f1;
  }
  
  .load{
    position: absolute;
    right: 1rem;
    bottom: 1rem;    
  }
  a{
    color: white;
  }
  